<% layout('/layouts/boilerplate.ejs')-%>

<div class="row mt-3">
  <h1 class="col-8 offset-4 mb-4" id="signUp-title">SignUp</h1>
  <div class="col-8 offset-4" id="signUp-container">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="col-6" id="signUp-entries">
        <label for="username" class="form-label">Username : </label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <!-- <div class="invalid-feedback">Please Enter Correct Username !</div> -->
      </div>
      <br />

      <div class="col-6" id="signUp-entries">
        <label for="email" class="form-label">E-mail : </label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <!-- <div class="valid-feedback">Looks good!</div> -->
        <!-- <div class="invalid-feedback">Please Enter Correct Username !</div> -->
      </div>
      <br />

      <div class="col-6" id="signUp-entries">
        <label for="password" class="form-label">Password : </label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <!-- <div class="valid-feedback">Looks good!</div> -->
        <!-- <div class="invalid-feedback">Please Enter Correct Username !</div> -->
      </div>
      <br />

      <button class="btn btn-warning mb-5">Sign-Up</button>
    </form>
  </div>
</div>
