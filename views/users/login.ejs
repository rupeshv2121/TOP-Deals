<% layout('/layouts/boilerplate.ejs')-%>

<div class="row mt-3">
  <h1 class="col-8 offset-4 mb-4" id="login-title">Log-In</h1>
  <div class="col-8 offset-4" id="login-container">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="col-6" id="login-info">
        <label for="username" class="form-label">Username : </label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Correct Username !</div>
      </div>
      <br />

      <div class="col-6" id="login-info">
        <label for="password" class="form-label">Password : </label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Correct Password!</div>
      </div>
      <br />

      <button class="btn btn-warning mb-5">Log-In</button>
    </form>
  </div>
</div>
